[user]
	name = hrls
	email = viktor.kharitonovich@gmail.com
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
[alias]
    cd  = checkout
    ss  = status
    sub = submodule

    df      = diff
    dt      = difftool
    vdf     = !git diff | mvim -
    dft     = difftool
    vdft    = difftool -t mvimdiff

[push]
    default = matching


[diff]
    tool = mvimdiff
[difftool "mvimdiff"]
    # todo: open in tabs
    cmd = mvim -f -d  \"$LOCAL\" \"$REMOTE\"
[difftool "opendiff"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[difftool "pargs"]
    cmd = pargs \"$LOCAL\" \"$REMOTE\"
    
[merge]
	tool = mvimdiff
[mergetool]
    prompt = false
[mergetool "mvimdiff"]
    cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
