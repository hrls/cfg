[user]
	name = hrls
	email = viktor.kharitonovich@gmail.com
[core]
	editor = mvim
	excludesfile = ~/.global_ignore
	autocrlf = input
[alias]
    df = !git diff | mvim -
	cd = checkout
	ss = status
    sub = submodule

# http://gitguru.com/2009/02/22/integrating-git-with-a-visual-merge-tool/
[merge]
	tool = mvimdiff
[mergetool]
    prompt = false
[mergetool "mvimdiff"]
    cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
[diff]
    tool = mvimdiff
[difftool "mvimdiff"]
    cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
[push]
    default = matching

    
